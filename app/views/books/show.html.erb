<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table>
          <tbody>

          <tr><%= image_tag current_user.get_profile_image(100,100) %></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-cog"></i>
          <% end %>
          <% end %>
        </div>


      <h2 class="mt-3">New book</h2>
      <% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
      </div>
      <div class="col-8 offset-md-1">
        <h2>Book detail</h2>
        <% @books.each do |book| %>
        <div>
        <%= link_to books_path(book.id) do %>
        <% end %>
        <p>Title：<%= book.title %></p>
        <p>Body：<%= book.body %></p>
        <p>ユーザーネーム：<%= book.user.name %></p>
        <%= link_to "Show", book_path(book) %>
        <%= link_to "Destroy", book_path(book), method: :delete %>
      </div>

        <% end %>
      </div>
    </div>
  </div>


</main>


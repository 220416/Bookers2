<main>
  
  <%= render 'homes/template', book: @book, user: @user %>
          
          <tr>
            <td>
            <tr><% @books.each do |book| %></tr>
            <td>
              <%= link_to user_path(current_user.id)do %>
              <%= image_tag current_user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td>
              <%= link_to "Show", book_path(book) %>
            </td>
            <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
            <% end %>
          </tr>
        </tbody>
        </table>
      </div>
    </div>
  </div>


</main>


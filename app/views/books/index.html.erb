<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <!--ユーザ画像の表示-->
        <table>
          <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <!--<th>name</th>-->
          </tr>
          <tr>
            <th>introduction</th>
            <!--<th>introduction</th>-->
          </tr>
          </tbody>
        </table>
        <div class="row">
        <p>user editボタン記述</p>
        </div>


      <h2 class="mt-3">New book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
      </div>
    </div>
  </div>


  <% @books.each do |book| %>
  <div>
  <%= link_to books_path(book.id) do %>

  <% end %>
  <p>Title：<%= book.title %></p>
  <p>Body：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
  <%= link_to "Show", book_path(book) %>
  <%= link_to "Destroy", book_path(book), method: :delete %>

  </div>
<% end %>
</main>




<% @books.each do |book| %>
  <div>
  <%= link_to books_path(book.id) do %>
  
  <% end %>
  <p>Title：<%= book.title %></p>
  <p>Body：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
  <%= link_to "Show", book_path(book) %>
  <%= link_to "Destroy", book_path(book), method: :delete %>
  
  </div>
<% end %>


<h1>New book</h1>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
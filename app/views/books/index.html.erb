<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'homes/template', book: @book, user: @user %>
      </div>


      <div class="col-8 offset-md-1">
        <h2>Books</h2>
        <table>
          <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
          </thead>
        <tbody>
          <tr>
            <td>
            <tr><% @books.each do |book| %></tr>
            <tr><% @users.each do |user| %></tr>
            <td>
              <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <% end %>
            <% end %>
          </tr>
        </tbody>
        </table>
      </div>
    </div>
  </div>


</main>


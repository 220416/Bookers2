<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
  <label for="inputBody">Introduction</label>
  <%= f.text_field :body, autofocus: true, id:"inputName", placeholder:"Body"%>
  <%= f.submit "Save" %>
<% end %>

<div>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
      <% @user.profile_image %>

  <% if @user.id == current_user.id %>
    <p><%= link_to "Users setting", edit_user_path(@user) %></p>
  <% end %>
</div>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
      <%= f.text_field :title %>
  <h4>Opinion</h4>
      <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<% @users.each do |user| %>
  <div>
  <p>image：<%= user.profile_image %></p>
  <p>name：<%= user.name %></p>
  
  <%= link_to "Show", user_path(params[:id]) %>
  
  </div>
<% end %>
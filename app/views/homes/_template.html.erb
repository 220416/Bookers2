
<div>
  <div class="">
  <h2>User info</h2>
    <%= image_tag @user.get_image %>
    <h3><%= @user.name %></h3>
    <h3><%= @user.introduction %></h3>

  </div>
  
  <div>
  <h1>New book</h1>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  </div>
  
</div>